<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow network access (for LSP servers, update checking) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allow read/write access to user-selected files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow read/write access to Downloads folder -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- Allow process execution (for LSP servers, terminal, formatters) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow JIT compilation (for QuickJS plugin runtime) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
</dict>
</plist>
